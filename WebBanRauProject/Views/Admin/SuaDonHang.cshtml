@model WebBanRauProject.Models.DONDATHANG

@{
    ViewBag.Title = "SuaDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SuaDonHang</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DONDATHANG</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MADH)

        <div class="form-group">
            @Html.LabelFor(model => model.DATHANHTOAN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <text>
                    @Html.RadioButtonFor(model => model.DATHANHTOAN, "true") Đã thanh toán
                    @Html.RadioButtonFor(model => model.DATHANHTOAN, "false") Chưa thanh toán
                </text>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TINHTRANGGIAOHANG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <text>
                    @Html.RadioButtonFor(model => model.TINHTRANGGIAOHANG, "true") Đã giao hàng
                    @Html.RadioButtonFor(model => model.TINHTRANGGIAOHANG, "false") Chưa giao hàng
                </text>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAYDAT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYDAT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYDAT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAYGIAO, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYGIAO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYGIAO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KHACHHANG.HOTEN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.KHACHHANG.HOTEN)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "DanhSachDonHang")
</div>
