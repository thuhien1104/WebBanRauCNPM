@model WebBanRauProject.Models.DONDATHANG

@{
    ViewBag.Title = "SuaDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="color: brown ; font-size:20px; text-align:center">SỬA ĐƠN HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MADH)

        <div class="form-group">
            @Html.LabelFor(model => model.DATHANHTOAN,"ĐÃ THANH THOÁN", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <text>
                    @Html.RadioButtonFor(model => model.DATHANHTOAN, "true") Đã thanh toán
                    @Html.RadioButtonFor(model => model.DATHANHTOAN, "false") Chưa thanh toán
                </text>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TINHTRANGGIAOHANG,"TÌNH TRẠNG GIAO HÀNG", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <text>
                    @Html.RadioButtonFor(model => model.TINHTRANGGIAOHANG, "true") Đã giao hàng
                    @Html.RadioButtonFor(model => model.TINHTRANGGIAOHANG, "false") Chưa giao hàng
                </text>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAYDAT, "NGÀY ĐẶT",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYDAT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYDAT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAYGIAO,"NGÀY GIAO", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NGAYGIAO, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYGIAO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KHACHHANG.HOTEN,"HỌ TÊN", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.KHACHHANG.HOTEN)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU" class="btn btn-default" />
                <button class="btn btn-default">
                        @Html.ActionLink("TRỞ VỀ", "DanhSachDonHang")
                </button>
                
            </div>
        </div>
    </div>
}

