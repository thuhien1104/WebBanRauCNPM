@model WebBanRauProject.Models.DONDATHANG

@{
    ViewBag.Title = "XemDonDatHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 50%;
        margin-top: 20px;
        margin-left: 400px;
    }

        #table td, #table th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #table tr:hover {
            background-color: #ddd;
        }

        #table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: white;
            color: black;
        }
</style>

<h2 style="color: brown ; font-size:20px; text-align:center">XEM ĐƠN ĐẶT HÀNG</h2>


<table id="table">
    <tr>
        <th>
            Thanh toán:
        </th>

        <td>
            <text>

                @Html.RadioButton("DATHANHTOAN", "true") Đã thanh toán


                @Html.RadioButton("DATHANHTOAN", "false") Chưa thanh toán

            </text>
        </td>
    </tr>
    
    <tr>
        <th>
            Tình trạng giao hàng:
        </th>

        <td>
            <text>
                @Html.RadioButton("TINHTRANGGIAOHANG", "true") Đã giao hàng


                @Html.RadioButton("TINHTRANGGIAOHANG", "false") Chưa giao hàng
            </text>
        </td>
    </tr>
    
    <tr>
        <th>
            Ngày đặt hàng:
        </th>

        <td>
            @Html.DisplayFor(model => model.NGAYDAT)
        </td>
    </tr>
    
    <tr>
        <th>
            Ngày giao hàng:
        </th>

        <td>
            @Html.DisplayFor(model => model.NGAYGIAO)
        </td>
    </tr>
    
    <tr>
        <th>
            Tên khách hàng:
        </th>

        <td>
            @Html.DisplayFor(model => model.KHACHHANG.HOTEN)
        </td>
    </tr>
</table>


<p>
    <button>
        @Html.ActionLink("Chi tiết", "ChiTietDonHang", new { id = Model.MADH }) 
    </button>
    <button>
        @Html.ActionLink("Cập nhập", "CapNhapDonHang", new { id = Model.MADH })
    </button>
    
</p>
