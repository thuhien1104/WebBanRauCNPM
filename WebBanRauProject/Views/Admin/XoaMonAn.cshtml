@model WebBanRauProject.Models.QuanLyGoiYMonAn

@{
    ViewBag.Title = "XoaMonAn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XoaMonAn</h2>

<h3>Bạn có muốn xóa món ăn này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên món ăn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENMONAN)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MOTA)
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HINHANH)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Trở về ", "XoaMonAn","Admin")
        </div>
    }
</div>
