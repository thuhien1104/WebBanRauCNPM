@model IEnumerable<WebBanRauProject.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container">

    <div class="row articles col-md-12 col-sm-12" style="height:100px;text-align:center; margin-top:60px;"><span style="text-align: center;font-size:20px;color:black; background-color: white;background-size:50px;border-radius:15px;padding :15px">Sản phẩm mới</span></div>

    <div class="row articles">
        @foreach (var sanpham in Model)
            {
    <!--articles-->

            <div class="col-md-3 col-sm-6">
                <a href="@Url.Action("Index", "RauShop", new { id = sanpham.MASP })">
                    <img alt="@sanpham.TENSP" src="~/images/@sanpham.ANHSP" />
                </a>
                <div class="text">
                    <a href="@Url.Action("Details" , "RauShop" , new { id = sanpham.MASP})">
                        <div style="text-align:center;font-size:18px;font-style:normal;font-weight:bold;text-decoration-line:underline;text-decoration-color:green;font-synthesis:weight">@sanpham.TENSP</div>
                    </a>
                    <p>
                        <div style="font-size:15px; font-weight:600">@sanpham.GIABAN/kg</div>
                    </p>
                </div>
            </div>

    <!--end-articles-->
        }
    </div>
    @Html.Action("Spbanchay", "")
</div>
















  

