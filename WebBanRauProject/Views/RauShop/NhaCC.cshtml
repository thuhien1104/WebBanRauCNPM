    <div class="row articles col-md-12 col-sm-12" style="height:100px;text-align:center; margin-top:60px;"><span style="text-align: center;color:black; font-size:25px; background-color: white;background-size:50px;border-radius:15px;padding :15px">Nhà cung cấp</span></div>

    <div class="row articles">
        @foreach (var item in Model)
            {
    <!--articles-->


            <div class="col-md-3 col-sm-6">
