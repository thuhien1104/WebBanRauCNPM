<style type="text/css">
    #Datmua a {
  
        clear: both;
        background-color: green;
        color: white;
        width: 200px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
      
        font-weight: bold;
        border-radius:30px;
        padding:30px;
        padding-bottom:60px;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>


@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!-- Cho du lieu ra giua man hinh-->
<div class="container">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div style="line-height:2;font-size:18px">
                <div>
                    <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
                        <img src="~/images/@Model.ANHSP" width="100%" />
                    </div>
                    <div style="width:60%; float:left;background-color:lightgreen;border-radius:30px;padding:30px;background-size:cover;padding-left:100px">
                        <h4 style="font-weight:bold;font-size:25px; color:red">Tên rau: @Model.TENSP</h4>
                        <p style="text-align:justify"><span style="font-weight:bold">Mô tả:</span>@Model.MOTA</p>
                        <p style="text-align:justify"><span style="font-weight:bold">Loại rau:</span>@Model.LOAIRAU.TENLOAI</p>
                        <p style="text-align:justify"><span style="font-weight:bold">Nhà cung cấp:</span>@Model.NHACUNGCAP.TENCC</p>

                        <p style="text-align:justify"><span style="font-weight:bold">Ngày cập nhật:</span>@Model.NGAYCAPNHAT</p>
                        <p style="font-weight:bold">Giá bán: <span style="color:red;font-size:16pt">@Model.GIABAN VNĐ</span></p>
                    </div>

                </div>
                <div>
                    <div id="Datmua">
                        
                            <a href="@Url.Action("ThemGioHang","GioHang", new { @iMaSP=@Model.MASP , @strURL = Request.Url.ToString()})"> Thêm vào giỏ </a>
                    </div>
                </div>
            </div>
            
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"></a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next"></a>
    </div>
</div>